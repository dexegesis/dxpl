{
    "compilerOptions": {
        "module" : "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "app",
        "rootDir": "./src",
        "sourceMap": false,
        "target": "es2015",
        "moduleResolution" : "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}